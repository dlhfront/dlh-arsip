{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "build": {
    "env": {
      "PRISMA_MIGRATION_ENGINE_BINARY": "node_modules/prisma/migration-engine-debian-openssl-1.1.x",
      "PRISMA_QUERY_ENGINE_BINARY": "node_modules/prisma/query-engine-debian-openssl-1.1.x"
    }
  },
  "crons": [
    {
      "path": "/api/keepalive",
      "schedule": "0 */6 * * *" 
    }
  ]
}